---
import Layout from '@/layouts/Layout.astro';
import { URL_BASE } from "@/config";

console.log(URL_BASE);
---

<Layout title="Yo soy mi mejor decisión">

<main>
  <section class="h-44 bg-abbott-gradient-wh">

  </section>
  <section
    style={`background-image: url(${URL_BASE}img/hero.webp); background-size: cover; background-position: top center;`}
    class="min-h-[500px] md:min-h-[800px] p-2 md:py-24"
  >
    <div class="max-w-[1200px] mx-auto">
      <div class="py-8">
        <div class="md:max-w-[700px] xl:max-w-[800px]">
          <img
            class="max-w-full h-auto"
            width="834"
            height="234"
            src=`${URL_BASE}img/elmetodo.webp`
            alt="El método más confiable es tu conocimiento"
          />
        </div>
        <div class="mt-36">
          <a href={URL_BASE + "app"} 
            class="inline-block px-8 py-4 bg-violeta-abbott text-white text-base md:text-3xl rounded-full"  
          > 
          <span class="font-bold">HAZ CLIC AQUÍ</span> PARA EMPEZAR 
        </a>
        </div>
      </div>
    </div>
  </section>
  <section class="bg-morado-abbott px-2">
    <div class="max-w-[1200px] mx-auto py-8 lg:py-16">
      <p class="text-2xl md:text-4xl font-serif md:leading-[3.5rem]">
        Este aplicativo tiene como objetivo probar y aumentar los conocimientos que tienen los estudiantes universitarios acerca de los diferentes métodos anticonceptivos en cuanto a su funcionamiento y uso correcto, <span class="font-semibold">con el fin de promover una sexualidad responsable.</span>
      </p>
    </div>
  </section>
</main>
</Layout>
